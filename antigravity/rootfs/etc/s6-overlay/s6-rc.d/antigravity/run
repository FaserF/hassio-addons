#!/command/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Community Add-on: Antigravity
# Runs the antigravity editor
# ==============================================================================
declare -a options
declare config_path

bashio::log.info 'Starting antigravity...'

config_path="/config"
if bashio::config.has_value 'config_path'; then
    config_path=$(bashio::config 'config_path')
fi

options+=(--port 1337)
options+=(--user-data-dir "/data/antigravity")
options+=(--extensions-dir "/data/antigravity/extensions")
options+=(--host 0.0.0.0)
options+=(--disable-telemetry)
options+=(--disable-update-check)

# Disable code authentication, we use HA authentication
options+=(--auth none)

# Export env variables for the Home Assistant extension
export HASS_SERVER="http://supervisor/core"
export HASS_TOKEN="${SUPERVISOR_TOKEN:-}"

# Run the Antigravity editor using the system binary
cd "${config_path}" || bashio::exit.nok "Could not change working directory"

# Antigravity (like VS Code) likely uses serve-web logic or simply 'antigravity' if it's a code-server fork
# The user wants "ingress" stream.
bashio::log.info "Starting Antigravity version $(antigravity --version)..."
exec antigravity --port 1337 --host 0.0.0.0 --auth none --user-data-dir /data/antigravity --extensions-dir /data/antigravity/extensions "${config_path}"
