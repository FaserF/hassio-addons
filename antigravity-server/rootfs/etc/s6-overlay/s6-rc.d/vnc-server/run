#!/command/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Add-on: Antigravity-Server
# Runs the TigerVNC server
# ==============================================================================

bashio::log.info "Starting TigerVNC server on display :1..."

# Start VNC server
exec vncserver :1 \
    -localhost no \
    -geometry 1920x1080 \
    -depth 24 \
    -AcceptClipboard=1 \
    -SendClipboard=1 \
    -fg \
    -SecurityTypes VncAuth \
    -rfbauth /root/.config/tigervnc/passwd
