{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 5,
  "dependencyDashboard": true,
  "labels": ["dependencies", "no-stale"],
  "commitMessagePrefix": "⬆️",
  "commitMessageSuffix": " [skip-tests]",
  "allowedCommands": ["^curl", "^sed", "^bash"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/", "/(^|/)build.yaml$/"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": [
        "ARG NODE_VERSION=[\"']?v?(?<currentValue>.+?)[\"']?\\s+",
        "ENV NODE_VERSION v?(?<currentValue>.+?)\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nodejs/node"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": ["ENV YARN_VERSION (?<currentValue>.+?)\\s+"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "yarnpkg/yarn"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/matterbridge/Dockerfile$/"],
      "matchStrings": [
        "ARG MATTERBRIDGE_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "42wim/matterbridge"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/pterodactyl-wings/Dockerfile$/"],
      "matchStrings": ["ARG WINGS_VERSION=(?<currentValue>v[\\d.]+)\\s+"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "pterodactyl/wings"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": [
        "ARG NETBOOTXYZ_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "netbootxyz/webapp"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": [
        "ARG SOLUMATI_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "FaserF/Solumati"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": [
        "ARG WIKIJS_VERSION=[\"']?v?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "Requarks/wiki"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": [
        "ARG AEGISBOT_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "FaserF/AegisBot"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": [
        "ARG SWITCH_LAN_PLAY_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "spacemeowx2/switch-lan-play"
    },
    {
      "customType": "regex",
      "description": "Track xqrepack git commit for script pinning",
      "managerFilePatterns": ["/.unsupported/xqrepack/Dockerfile$/"],
      "matchStrings": [
        "ARG XQREPACK_COMMIT=[\"']?(?<currentDigest>[a-f0-9]+)[\"']?"
      ],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "https://github.com/geekman/xqrepack",
      "currentValueTemplate": "master"
    },
    {
      "customType": "regex",
      "description": "Track bt-mqtt-gateway version (commit hash)",
      "managerFilePatterns": ["/.unsupported/bt-mqtt-gateway/Dockerfile$/"],
      "matchStrings": ["ARG BT_MQTT_VERSION=(?<currentDigest>[a-f0-9]+)"],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "https://github.com/zewelor/bt-mqtt-gateway",
      "currentValueTemplate": "master"
    },
    {
      "customType": "regex",
      "description": "Track Pterodactyl Panel release branch",
      "managerFilePatterns": ["/pterodactyl-panel/Dockerfile$/"],
      "matchStrings": ["--branch release/v(?<currentValue>[\\d.]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "pterodactyl/panel",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Track tuya-convert git commit",
      "managerFilePatterns": ["/.unsupported/tuya-convert/Dockerfile$/"],
      "matchStrings": ["git checkout (?<currentDigest>[a-f0-9]+)"],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "https://github.com/ct-Open-Source/tuya-convert",
      "currentValueTemplate": "master"
    },
    {
      "customType": "regex",
      "description": "Track Home Assistant version for test instance",
      "managerFilePatterns": ["/homeassistant-test-instance/Dockerfile$/"],
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>ghcr\\.io/home-assistant/home-assistant):(?<currentValue>[\\d.]+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/antigravity-server/Dockerfile$/"],
      "matchStrings": [
        "ARG ANTIGRAVITY_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "Eidolf/Docker-AntiGravity"
    },
    {
      "customType": "regex",
      "description": "Track Wiki.js V3 Docker image digest",
      "managerFilePatterns": ["/wiki.js3/Dockerfile$/"],
      "matchStrings": [
        "FROM ghcr\\.io/requarks/wiki:(?<currentValue>3)@sha256:(?<currentDigest>[a-f0-9]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/requarks/wiki",
      "versioningTemplate": "docker",
      "currentValueTemplate": "3"
    },
    {
      "customType": "regex",
      "description": "Track NGINX Alpine package version",
      "managerFilePatterns": ["/nginx/Dockerfile$/"],
      "matchStrings": [
        "# renovate: datasource=repology depName=alpine_3_21/nginx versioning=loose\\nARG NGINX_VERSION=[\"']?(?<currentValue>[^\"']*)[\"']?"
      ],
      "datasourceTemplate": "repology",
      "depNameTemplate": "alpine_3_21/nginx",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Add-on base images",
      "matchDatasources": ["docker"],
      "matchDepNames": [
        "ghcr.io/hassio-addons/base",
        "ghcr.io/hassio-addons/debian-base",
        "ghcr.io/hassio-addons/base-python"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Development Tools",
      "matchDepNames": ["nodejs/node", "yarnpkg/yarn"],
      "automerge": true
    },
    {
      "groupName": "Add-on Softwares",
      "matchDepNames": [
        "42wim/matterbridge",
        "netbootxyz/webapp",
        "Requarks/wiki",
        "ghcr.io/requarks/wiki",
        "FaserF/AegisBot",
        "FaserF/Solumati",
        "spacemeowx2/switch-lan-play",
        "Eidolf/Docker-AntiGravity"
      ],
      "automerge": false
    },
    {
      "description": "Netboot.xyz - auto-update checksums",
      "matchDepNames": ["netbootxyz/webapp"],
      "automerge": true,
      "postUpgradeTasks": {
        "commands": [
          "bash .github/scripts/update-checksums.sh netboot-xyz {{{newVersion}}}"
        ],
        "fileFilters": ["netboot-xyz/Dockerfile"],
        "executionMode": "branch"
      }
    },
    {
      "description": "Pterodactyl Wings - auto-update checksums via postUpgradeTasks",
      "matchDepNames": ["pterodactyl/wings"],
      "automerge": true,
      "postUpgradeTasks": {
        "commands": [
          "bash .github/scripts/update-checksums.sh pterodactyl-wings {{{newVersion}}}"
        ],
        "fileFilters": ["pterodactyl-wings/Dockerfile"],
        "executionMode": "branch"
      }
    },
    {
      "description": "Matterbridge - auto-update checksums via postUpgradeTasks",
      "matchDepNames": ["42wim/matterbridge"],
      "automerge": true,
      "postUpgradeTasks": {
        "commands": [
          "bash .github/scripts/update-checksums.sh matterbridge {{{newVersion}}}"
        ],
        "fileFilters": ["matterbridge/Dockerfile"],
        "executionMode": "branch"
      }
    },
    {
      "description": "Wiki.js V3 - auto-update Docker image digest",
      "matchDepNames": ["ghcr.io/requarks/wiki"],
      "matchFileNames": ["wiki.js3/Dockerfile"],
      "automerge": true,
      "ignoreTests": false,
      "allowedVersions": "/^3$/",
      "versioning": "docker",
      "updateTypes": ["digest"],
      "currentValueTemplate": "3"
    },
    {
      "description": "NGINX - auto-update Alpine package version",
      "matchDepNames": ["alpine_3_21/nginx"],
      "matchFileNames": ["nginx/Dockerfile"],
      "automerge": true,
      "ignoreTests": false
    },
    {
      "matchManagers": ["pip_requirements"],
      "addLabels": ["python"],
      "rangeStrategy": "pin",
      "automerge": true
    },
    {
      "description": "Allow pre-releases for Antigravity-Server",
      "matchDepNames": ["Eidolf/Docker-AntiGravity"],
      "ignoreUnstable": false
    }
  ]
}
