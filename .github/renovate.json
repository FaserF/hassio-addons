{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": [
    "dependencies",
    "no-stale"
  ],
  "commitMessagePrefix": "⬆️",
  "allowedPostUpgradeCommands": [
    "^curl",
    "^sed",
    "^bash"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$",
        "(^|/)build.yaml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG NODE_VERSION=[\"']?v?(?<currentValue>.+?)[\"']?\\s+",
        "ENV NODE_VERSION v?(?<currentValue>.+?)\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nodejs/node"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ENV YARN_VERSION (?<currentValue>.+?)\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "yarnpkg/yarn"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "matterbridge/Dockerfile$"
      ],
      "matchStrings": [
        "ARG MATTERBRIDGE_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "42wim/matterbridge"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "pterodactyl-wings/Dockerfile$"
      ],
      "matchStrings": [
        "ARG WINGS_VERSION=(?<currentValue>v[\\d.]+)\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "pterodactyl/wings"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG NETBOOTXYZ_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "netbootxyz/webapp"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG SOLUMATI_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "FaserF/Solumati"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG WIKIJS_VERSION=[\"']?v?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "Requarks/wiki"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG AEGISBOT_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "FaserF/AegisBot"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "(?<depName>php)(?<currentValue>\\d+)(?:-[a-z0-9-]+)*"
      ],
      "datasourceTemplate": "repology",
      "versioningTemplate": "regex:^(?<major>\\d)(?<minor>\\d+)"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG SWITCH_LAN_PLAY_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "spacemeowx2/switch-lan-play"
    },
    {
      "customType": "regex",
      "description": "Track xqrepack git commit for script pinning",
      "fileMatch": [
        ".unsupported/xqrepack/Dockerfile$"
      ],
      "matchStrings": [
        "ARG XQREPACK_COMMIT=[\"']?(?<currentDigest>[a-f0-9]+)[\"']?"
      ],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "https://github.com/geekman/xqrepack",
      "currentValueTemplate": "master"
    },
    {
      "customType": "regex",
      "description": "Track bt-mqtt-gateway version (commit hash)",
      "fileMatch": [
        ".unsupported/bt-mqtt-gateway/Dockerfile$"
      ],
      "matchStrings": [
        "ARG BT_MQTT_VERSION=(?<currentDigest>[a-f0-9]+)"
      ],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "https://github.com/zewelor/bt-mqtt-gateway",
      "currentValueTemplate": "master"
    },
    {
      "customType": "regex",
      "description": "Track Pterodactyl Panel release branch",
      "fileMatch": [
        "pterodactyl-panel/Dockerfile$"
      ],
      "matchStrings": [
        "--branch release/v(?<currentValue>[\\d.]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "pterodactyl/panel",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Track tuya-convert git commit",
      "fileMatch": [
        ".unsupported/tuya-convert/Dockerfile$"
      ],
      "matchStrings": [
        "git checkout (?<currentDigest>[a-f0-9]+)"
      ],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "https://github.com/ct-Open-Source/tuya-convert",
      "currentValueTemplate": "master"
    },
    {
      "customType": "regex",
      "description": "Track Home Assistant version for test instance",
      "fileMatch": [
        "homeassistant-test-instance/Dockerfile$"
      ],
      "matchStrings": [
        "ARG BUILD_FROM=ghcr.io/home-assistant/home-assistant:(?<currentValue>[\\d.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/home-assistant/home-assistant"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Add-on base images",
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "ghcr.io/hassio-addons/base",
        "ghcr.io/hassio-addons/debian-base",
        "ghcr.io/hassio-addons/base-python"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Development Tools",
      "matchDepNames": [
        "nodejs/node",
        "yarnpkg/yarn"
      ],
      "automerge": true
    },
    {
      "groupName": "Add-on Softwares",
      "matchDepNames": [
        "42wim/matterbridge",
        "netbootxyz/webapp",
        "Requarks/wiki",
        "FaserF/AegisBot",
        "FaserF/Solumati",
        "spacemeowx2/switch-lan-play"
      ],
      "automerge": false
    },
    {
      "description": "Pterodactyl Wings - auto-update checksums via postUpgradeTasks",
      "matchDepNames": [
        "pterodactyl/wings"
      ],
      "automerge": true,
      "postUpgradeTasks": {
        "commands": [
          "bash .github/scripts/update-checksums.sh pterodactyl-wings {{{newVersion}}}"
        ],
        "fileFilters": [
          "pterodactyl-wings/Dockerfile"
        ],
        "executionMode": "branch"
      }
    },
    {
      "description": "Matterbridge - auto-update checksums via postUpgradeTasks",
      "matchDepNames": [
        "42wim/matterbridge"
      ],
      "automerge": true,
      "postUpgradeTasks": {
        "commands": [
          "bash .github/scripts/update-checksums.sh matterbridge {{{newVersion}}}"
        ],
        "fileFilters": [
          "matterbridge/Dockerfile"
        ],
        "executionMode": "branch"
      }
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "addLabels": [
        "python"
      ],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "automerge": true
    },
    {
      "groupName": "PHP Packages",
      "matchDatasources": [
        "repology"
      ],
      "matchPackageNames": [
        "/php\\d+/"
      ],
      "automerge": true
    }
  ]
}