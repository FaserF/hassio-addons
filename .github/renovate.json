{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": ["dependencies", "no-stale"],
  "commitMessagePrefix": "⬆️",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["//Dockerfile$/", "//build.yaml$/"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64|armhf|armv7|i386):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["//Dockerfile$/"],
      "matchStrings": ["ARG MATTERBRIDGE_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "42wim/matterbridge"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["//Dockerfile$/"],
      "matchStrings": ["ARG NETBOOTXYZ_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "netbootxyz/webapp"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["//Dockerfile$/"],
      "matchStrings": [
        "(?<packages>(?<depName>php[0-9]+(?:-[a-z0-9-]+)*)(\\s+php[0-9]+(?:-[a-z0-9-]+)*)*)",
        "php(?<currentValue>\\d+)"
      ],
      "datasourceTemplate": "alpine",
      "versioningTemplate": "regex:^(?<major>\\d)(?<minor>\\d+)"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["//Dockerfile$/"],
      "matchStrings": ["ARG SOLUMATI_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "FaserF/Solumati"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Add-on base image",
      "matchDatasources": ["docker"],
      "matchDepNames": ["ghcr.io/hassio-addons/base"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Add-on Debian base image",
      "matchDatasources": ["docker"],
      "matchDepNames": ["ghcr.io/hassio-addons/debian-base"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Add-on python base image",
      "matchDatasources": ["docker"],
      "matchDepNames": ["ghcr.io/hassio-addons/base-python"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Matterbridge",
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["42wim/matterbridge"],
      "automerge": true
    },
    {
      "groupName": "Netbootxyz",
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["netbootxyz/webapp"],
      "automerge": true
    },
    {
      "matchManagers": ["pip_requirements"],
      "addLabels": ["python"],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": ["pip_requirements"],
      "automerge": true
    },
    {
      "groupName": "PHP Packages",
      "matchDatasources": ["alpine"],
      "automerge": true,
      "matchPackageNames": ["/php\\d+/"]
    },
    {
      "groupName": "Solumati",
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["FaserF/Solumati"],
      "automerge": true,
      "ignoreUnstable": false
    }
  ]
}
