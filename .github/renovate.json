{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": [
    "dependencies",
    "no-stale"
  ],
  "commitMessagePrefix": "⬆️",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$",
        "(^|/)build.yaml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64|armhf|armv7|i386):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG NODE_VERSION=[\"']?v?(?<currentValue>.+?)[\"']?\\s+",
        "ENV NODE_VERSION v?(?<currentValue>.+?)\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nodejs/node"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ENV YARN_VERSION (?<currentValue>.+?)\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "yarnpkg/yarn"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG MATTERBRIDGE_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "42wim/matterbridge"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG NETBOOTXYZ_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "netbootxyz/webapp"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG SOLUMATI_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "FaserF/Solumati"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG WIKIJS_VERSION=[\"']?v?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "Requarks/wiki"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG AEGISBOT_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "FaserF/AegisBot"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "(?<depName>php)(?<currentValue>\\d+)(?:-[a-z0-9-]+)*"
      ],
      "datasourceTemplate": "alpine",
      "versioningTemplate": "regex:^(?<major>\\d)(?<minor>\\d+)"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Add-on base images",
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "ghcr.io/hassio-addons/base",
        "ghcr.io/hassio-addons/debian-base",
        "ghcr.io/hassio-addons/base-python"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "Development Tools",
      "matchDepNames": [
        "nodejs/node",
        "yarnpkg/yarn"
      ],
      "automerge": true
    },
    {
      "groupName": "Add-on Softwares",
      "matchDepNames": [
        "42wim/matterbridge",
        "netbootxyz/webapp",
        "Requarks/wiki",
        "FaserF/AegisBot",
        "FaserF/Solumati"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "addLabels": [
        "python"
      ],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "automerge": true
    },
    {
      "groupName": "PHP Packages",
      "matchDatasources": [
        "alpine"
      ],
      "matchPackageNames": [
        "/php\\d+/"
      ],
      "automerge": true
    }
  ]
}